@page "/products/category/{CategoryId:int}"
@rendermode InteractiveServer
@using ProductCatalogApp.Models
@using ProductCatalogApp.Services
@inject IProductService ProductService
@inject ICategoryService CategoryService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Товары в категории "@categoryName"</h2>
            <p>
                <a class="btn btn-primary" href="/products/create?categoryId=@CategoryId">Создать новый товар</a>
                <a class="btn btn-secondary ms-2" href="/categories">Назад к категориям</a>
            </p>
            
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Код товара</th>
                        <th>Название товара</th>
                        <th>Описание товара</th>
                        <th>Цена</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in products)
                    {
                        <tr>
                            <td>@product.CodeProduct</td>
                            <td>@product.NameProduct</td>
                            <td>@product.DescriptionProduct</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" href="/products/edit/@product.CodeProduct">Изменить</a>
                                <a class="btn btn-sm btn-outline-info" href="/products/details/@product.CodeProduct">Детали</a>
                                <a class="btn btn-sm btn-outline-warning" href="/orders/product/@product.CodeProduct">Заказы</a>
                                <a class="btn btn-sm btn-outline-danger" href="/products/delete/@product.CodeProduct">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    [Parameter] public int CategoryId { get; set; }
    
    private IEnumerable<Product> products = new List<Product>();
    private string categoryName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        products = await ProductService.GetByCategoryAsync(CategoryId);
        
        var category = await CategoryService.GetByIdAsync(CategoryId);
        if (category != null)
        {
            categoryName = category.NameCategory;
        }
        else
        {
            Navigation.NavigateTo("/categories");
        }
    }
}