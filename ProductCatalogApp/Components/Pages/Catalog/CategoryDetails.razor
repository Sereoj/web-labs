@page "/categories/details/{CategoryId:int}"
@rendermode InteractiveServer
@using ProductCatalogApp.Models
@using ProductCatalogApp.Services
@inject ICategoryService CategoryService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Детали категории</h3>
            
            @if (category != null)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Код категории: @category.CodeCategory</h5>
                        <p class="card-text"><strong>Название категории:</strong> @category.NameCategory</p>
                        <p class="card-text"><strong>Количество товаров:</strong> @category.Products.Count()</p>
                        
                        <div class="mt-3">
                            <a class="btn btn-primary me-2" href="/categories/edit/@category.CodeCategory">Редактировать</a>
                            <a class="btn btn-info me-2" href="/products/category/@category.CodeCategory">Просмотреть товары</a>
                            <a class="btn btn-secondary" href="/categories">Назад к списку</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p>Категория не найдена.</p>
                <a class="btn btn-secondary" href="/categories">Назад к списку</a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int CategoryId { get; set; }
    
    private Category? category;

    protected override async Task OnInitializedAsync()
    {
        category = await CategoryService.GetWithProductsByIdAsync(CategoryId);
    }
}