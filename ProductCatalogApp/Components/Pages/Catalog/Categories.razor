@page "/categories"
@rendermode InteractiveServer
@inject ICategoryService CategoryService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Категории товаров</h2>
            
            <AuthorizeView Roles="Администратор">
                <Authorized>
                    <p>
                        <a class="btn btn-primary" href="/categories/create">Создать новую категорию</a>
                    </p>
                </Authorized>
            </AuthorizeView>
            
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Код категории</th>
                        <th>Название категории</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in categories)
                    {
                        <tr>
                            <td>@category.CodeCategory</td>
                            <td>@category.NameCategory</td>
                            <td>
                                <a class="btn btn-sm btn-outline-info" href="/categories/details/@category.CodeCategory">Детали</a>
                                <a class="btn btn-sm btn-outline-warning" href="/products/category/@category.CodeCategory">Товары</a>
                                <AuthorizeView Roles="Администратор">
                                    <Authorized>
                                        <a class="btn btn-sm btn-outline-primary" href="/categories/edit/@category.CodeCategory">Изменить</a>
                                        <a class="btn btn-sm btn-outline-danger" href="/categories/delete/@category.CodeCategory">Удалить</a>
                                    </Authorized>
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private IEnumerable<Category> categories = new List<Category>();

    protected override async Task OnInitializedAsync()
    {
        categories = await CategoryService.GetAllAsync();
    }
}
