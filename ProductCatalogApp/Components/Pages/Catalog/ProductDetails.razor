@page "/products/details/{ProductId:int}"
@rendermode InteractiveServer
@using ProductCatalogApp.Models
@using ProductCatalogApp.Services
@inject IProductService ProductService
@inject ICategoryService CategoryService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Детали товара</h3>
            
            @if (product != null)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Код товара: @product.CodeProduct</h5>
                        <p class="card-text"><strong>Название товара:</strong> @product.NameProduct</p>
                        <p class="card-text"><strong>Описание товара:</strong> @(product.DescriptionProduct ?? "Нет описания")</p>
                        <p class="card-text"><strong>Цена:</strong> @product.Price.ToString("C")</p>
                        <p class="card-text"><strong>Код категории:</strong> @product.CodeCategory (@GetCategoryName(product.CodeCategory))</p>
                        <p class="card-text"><strong>Количество заказов:</strong> @product.Orders.Count()</p>
                        
                        <div class="mt-3">
                            <a class="btn btn-primary me-2" href="/products/edit/@product.CodeProduct">Редактировать</a>
                            <a class="btn btn-info me-2" href="/orders/product/@product.CodeProduct">Просмотреть заказы</a>
                            <a class="btn btn-secondary" href="/products">Назад к списку</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p>Товар не найден.</p>
                <a class="btn btn-secondary" href="/products">Назад к списку</a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int ProductId { get; set; }
    
    private Product? product;
    private Dictionary<int, string> categoryNames = new();

    protected override async Task OnInitializedAsync()
    {
        product = await ProductService.GetWithCategoryAndOrdersByIdAsync(ProductId);
        
        // Get all categories to map names
        var categories = await CategoryService.GetAllAsync();
        foreach(var category in categories)
        {
            categoryNames[category.CodeCategory] = category.NameCategory;
        }
    }

    private string GetCategoryName(int categoryId)
    {
        return categoryNames.ContainsKey(categoryId) ? categoryNames[categoryId] : "Неизвестная категория";
    }
}