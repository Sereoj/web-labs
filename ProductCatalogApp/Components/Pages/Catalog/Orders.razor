@page "/orders"
@rendermode InteractiveServer
@inject IOrderService OrderService
@inject IProductService ProductService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Заказы</h2>
            
            <AuthorizeView Roles="Администратор">
                <Authorized>
                    <p>
                        <a class="btn btn-primary" href="/orders/create">Создать новый заказ</a>
                    </p>
                </Authorized>
            </AuthorizeView>
            
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Код заказа</th>
                        <th>Код товара</th>
                        <th>Название товара</th>
                        <th>Категория товара</th>
                        <th>Количество</th>
                        <th>Дата заказа</th>
                        <th>Общая стоимость</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in orders)
                    {
                        <tr>
                            <td>@order.CodeOrder</td>
                            <td>@order.CodeProduct</td>
                            <td>@order.Product?.NameProduct</td>
                            <td>@order.Product?.Category?.NameCategory</td>
                            <td>@order.Quantity</td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                            <td>@order.TotalCost.ToString("C")</td>
                            <td>
                                <a class="btn btn-sm btn-outline-info" href="/orders/details/@order.CodeOrder">Детали</a>
                                <a class="btn btn-sm btn-outline-warning" href="/products/details/@order.CodeProduct">Товар</a>
                                <AuthorizeView Roles="Администратор">
                                    <Authorized>
                                        <a class="btn btn-sm btn-outline-primary" href="/orders/edit/@order.CodeOrder">Изменить</a>
                                        <a class="btn btn-sm btn-outline-danger" href="/orders/delete/@order.CodeOrder">Удалить</a>
                                    </Authorized>
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private IEnumerable<Order> orders = new List<Order>();

    protected override async Task OnInitializedAsync()
    {
        orders = await OrderService.GetWithProductAsync();
    }
}
