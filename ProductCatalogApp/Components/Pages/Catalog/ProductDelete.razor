@page "/products/delete/{ProductId:int}"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Администратор")]
@inject IProductService ProductService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Удалить товар</h3>
            
            @if (product != null)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Вы уверены, что хотите удалить этот товар?</h5>
                        <p class="card-text"><strong>Код товара:</strong> @product.CodeProduct</p>
                        <p class="card-text"><strong>Название товара:</strong> @product.NameProduct</p>
                        <p class="card-text"><strong>Цена:</strong> @product.Price.ToString("C")</p>
                        <p class="card-text"><strong>Количество заказов:</strong> @product.Orders.Count()</p>
                        
                        <div class="mt-3">
                            <button class="btn btn-danger me-2" @onclick="DeleteProduct">Удалить</button>
                            <a class="btn btn-secondary" href="/products">Отмена</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p>Товар не найден.</p>
                <a class="btn btn-secondary" href="/products">Назад к списку</a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int ProductId { get; set; }
    
    private Product? product;

    protected override async Task OnInitializedAsync()
    {
        product = await ProductService.GetWithCategoryAndOrdersByIdAsync(ProductId);
    }

    private async Task DeleteProduct()
    {
        if (product != null)
        {
            await ProductService.DeleteAsync(product.CodeProduct);
            Navigation.NavigateTo("/products");
        }
    }
}