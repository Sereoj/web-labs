@page "/orders/details/{OrderId:int}"
@rendermode InteractiveServer
@using ProductCatalogApp.Models
@using ProductCatalogApp.Services
@inject IOrderService OrderService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Детали заказа</h3>
            
            @if (order != null)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Код заказа: @order.CodeOrder</h5>
                        <p class="card-text"><strong>Код товара:</strong> @order.CodeProduct</p>
                        <p class="card-text"><strong>Название товара:</strong> @order.Product?.NameProduct</p>
                        <p class="card-text"><strong>Категория товара:</strong> @order.Product?.Category?.NameCategory</p>
                        <p class="card-text"><strong>Количество:</strong> @order.Quantity</p>
                        <p class="card-text"><strong>Дата заказа:</strong> @order.OrderDate.ToString("dd.MM.yyyy")</p>
                        <p class="card-text"><strong>Общая стоимость:</strong> @order.TotalCost.ToString("C")</p>
                        
                        <div class="mt-3">
                            <a class="btn btn-primary me-2" href="/orders/edit/@order.CodeOrder">Редактировать</a>
                            <a class="btn btn-info me-2" href="/products/details/@order.CodeProduct">Просмотреть товар</a>
                            <a class="btn btn-secondary" href="/orders">Назад к списку</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p>Заказ не найден.</p>
                <a class="btn btn-secondary" href="/orders">Назад к списку</a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int OrderId { get; set; }
    
    private Order? order;

    protected override async Task OnInitializedAsync()
    {
        order = await OrderService.GetWithProductByIdAsync(OrderId);
    }
}