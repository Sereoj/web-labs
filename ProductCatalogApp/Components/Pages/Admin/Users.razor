@page "/admin/users"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Администратор")]
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject ICategoryService CategoryService

<div class="container mt-4">
    <h2>Управление пользователями</h2>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @(isError ? "alert-danger" : "alert-success")" role="alert">
            @message
        </div>
    }

    @if (users == null)
    {
        <p>Загрузка...</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Предпочтительная категория</th>
                    <th>Дата регистрации</th>
                    <th>Роль</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@GetCategoryName(user.PreferredCategoryId)</td>
                        <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            @{
                                var role = userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : "Без роли";
                            }
                            <span class="badge @(role == "Администратор" ? "bg-danger" : "bg-primary")">@role</span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => EditUser(user)">Редактировать</button>
                            @if (userRoles.ContainsKey(user.Id) && userRoles[user.Id] != "Администратор")
                            {
                                <button class="btn btn-sm btn-outline-success" @onclick="() => PromoteToAdmin(user)">В админы</button>
                            }
                            @if (userRoles.ContainsKey(user.Id) && userRoles[user.Id] == "Администратор" && user.Email != "admin@example.com")
                            {
                                <button class="btn btn-sm btn-outline-warning" @onclick="() => DemoteFromAdmin(user)">Убрать админа</button>
                            }
                            @if (user.Email != "admin@example.com")
                            {
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteUser(user)">Удалить</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@if (editingUser != null)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Редактирование пользователя</h5>
                    <button type="button" class="btn-close" @onclick="CloseEditModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="editingUser" OnValidSubmit="SaveUser">
                        <DataAnnotationsValidator />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Имя</label>
                                <InputText class="form-control" @bind-Value="editingUser.FirstName" />
                                <ValidationMessage For="@(() => editingUser.FirstName)" class="text-danger" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Фамилия</label>
                                <InputText class="form-control" @bind-Value="editingUser.LastName" />
                                <ValidationMessage For="@(() => editingUser.LastName)" class="text-danger" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText class="form-control" @bind-Value="editingUser.Email" disabled />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Дата рождения</label>
                            <InputDate class="form-control" @bind-Value="editingUser.BirthDate" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Предпочтительная категория</label>
                            <InputSelect class="form-select" @bind-Value="editingUser.PreferredCategoryId">
                                <option value="">-- Не выбрано --</option>
                                @foreach (var category in categories)
                                {
                                    <option value="@category.CodeCategory">@category.NameCategory</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">О себе</label>
                            <InputTextArea class="form-control" @bind-Value="editingUser.About" rows="3" />
                        </div>

                        <button type="submit" class="btn btn-primary me-2">Сохранить</button>
                        <button type="button" class="btn btn-secondary" @onclick="CloseEditModal">Отмена</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ApplicationUser>? users;
    private Dictionary<string, string> userRoles = new();
    private IEnumerable<Category> categories = new List<Category>();
    private ApplicationUser? editingUser;
    private string? message;
    private bool isError;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        users = UserManager.Users.ToList();
        categories = await CategoryService.GetAllAsync();
        
        userRoles.Clear();
        foreach (var user in users)
        {
            var roles = await UserManager.GetRolesAsync(user);
            userRoles[user.Id] = roles.FirstOrDefault() ?? "Без роли";
        }
    }

    private string GetCategoryName(int? categoryId)
    {
        if (!categoryId.HasValue) return "Не выбрана";
        var category = categories.FirstOrDefault(c => c.CodeCategory == categoryId.Value);
        return category?.NameCategory ?? "Не найдена";
    }

    private void EditUser(ApplicationUser user)
    {
        editingUser = user;
    }

    private void CloseEditModal()
    {
        editingUser = null;
    }

    private async Task SaveUser()
    {
        if (editingUser == null) return;

        try
        {
            var result = await UserManager.UpdateAsync(editingUser);
            if (result.Succeeded)
            {
                message = "Пользователь успешно обновлён";
                isError = false;
                CloseEditModal();
            }
            else
            {
                message = string.Join(". ", result.Errors.Select(e => e.Description));
                isError = true;
            }
        }
        catch (Exception ex)
        {
            message = $"Ошибка: {ex.Message}";
            isError = true;
        }
    }

    private async Task PromoteToAdmin(ApplicationUser user)
    {
        try
        {
            var currentRole = userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : null;
            if (!string.IsNullOrEmpty(currentRole))
            {
                await UserManager.RemoveFromRoleAsync(user, currentRole);
            }
            
            await UserManager.AddToRoleAsync(user, IdentityDataInitializer.Roles.Administrator);
            await LoadData();
            message = $"Пользователь {user.Email} теперь администратор";
            isError = false;
        }
        catch (Exception ex)
        {
            message = $"Ошибка: {ex.Message}";
            isError = true;
        }
    }

    private async Task DemoteFromAdmin(ApplicationUser user)
    {
        try
        {
            await UserManager.RemoveFromRoleAsync(user, IdentityDataInitializer.Roles.Administrator);
            await UserManager.AddToRoleAsync(user, IdentityDataInitializer.Roles.User);
            await LoadData();
            message = $"Пользователь {user.Email} теперь обычный пользователь";
            isError = false;
        }
        catch (Exception ex)
        {
            message = $"Ошибка: {ex.Message}";
            isError = true;
        }
    }

    private async Task DeleteUser(ApplicationUser user)
    {
        try
        {
            var result = await UserManager.DeleteAsync(user);
            if (result.Succeeded)
            {
                await LoadData();
                message = $"Пользователь {user.Email} удалён";
                isError = false;
            }
            else
            {
                message = string.Join(". ", result.Errors.Select(e => e.Description));
                isError = true;
            }
        }
        catch (Exception ex)
        {
            message = $"Ошибка: {ex.Message}";
            isError = true;
        }
    }
}
