@page "/employeemanagement"
@rendermode InteractiveServer
@using EmployeeManagementApp.Models
@using EmployeeManagementApp.Services
@inject IEmployeeService EmployeeService
@inject IJSRuntime JSRuntime

<div class="container">
    <h2>Управление сотрудниками</h2>
    
    <!-- Top section: List of all employees -->
    <div class="top-section">
        <h3>Список всех сотрудников</h3>
        <table class="employees-table">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Email</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (allEmployees.Any(e => e.CurrentPosition == Position.None))
                {
                    @foreach (var employee in allEmployees.Where(e => e.CurrentPosition == Position.None))
                    {
                        <tr class="employee-row" 
                            draggable="true"
                            data-employee-id="@employee.Id"
                            @ondragstart="(e) => OnDragStart(e, employee.Id)"
                            @onclick="() => ShowPositionMenu(employee)">
                            <td>@employee.Name</td>
                            <td>@employee.Email</td>
                            <td>
                                <button class="btn-small" type="button" title="Назначить программистом" @onclick="() => MoveEmployeeToPosition(employee, Position.Programmer)" @onclick:stopPropagation="true">П</button>
                                <button class="btn-small" type="button" title="Назначить аналитиком" @onclick="() => MoveEmployeeToPosition(employee, Position.Analyst)" @onclick:stopPropagation="true">А</button>
                                <button class="btn-small" type="button" title="Назначить дизайнером" @onclick="() => MoveEmployeeToPosition(employee, Position.Designer)" @onclick:stopPropagation="true">Д</button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" style="text-align: center; padding: 20px;">Нет доступных сотрудников</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bottom section: Table with three columns -->
    <div class="bottom-section">
        <h3>Распределение по отделам</h3>
        <table class="positions-table">
            <thead>
                <tr>
                    <th class="col-programmer">Программист</th>
                    <th class="col-analyst">Аналитик</th>
                    <th class="col-designer">Дизайнер</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="drop-zone" 
                        data-position="Programmer"
                        @ondrop="(e) => OnDrop(e, Position.Programmer)"
                        @ondragover="OnDragOver"
                        @ondragover:preventDefault="true"
                        @ondragleave="OnDragLeave">
                        @foreach (var employee in programmers)
                        {
                            <div class="employee-item" 
                                 draggable="true"
                                 data-employee-id="@employee.Id"
                                 @ondragstart="(e) => OnDragStart(e, employee.Id)"
                                 @ondblclick="() => MoveEmployeeToAvailable(employee)">
                                <span>@employee.Name</span>
                                <button class="btn-remove" type="button" title="Снять с должности" @onclick="() => RemoveFromPosition(employee.Id)" @onclick:stopPropagation="true">×</button>
                            </div>
                        }
                        @if (!programmers.Any())
                        {
                            <div style="color: #999; padding: 10px; text-align: center;">Пусто</div>
                        }
                    </td>
                    <td class="drop-zone"
                        data-position="Analyst"
                        @ondrop="(e) => OnDrop(e, Position.Analyst)"
                        @ondragover="OnDragOver"
                        @ondragover:preventDefault="true"
                        @ondragleave="OnDragLeave">
                        @foreach (var employee in analysts)
                        {
                            <div class="employee-item" 
                                 draggable="true"
                                 data-employee-id="@employee.Id"
                                 @ondragstart="(e) => OnDragStart(e, employee.Id)"
                                 @ondblclick="() => MoveEmployeeToAvailable(employee)">
                                <span>@employee.Name</span>
                                <button class="btn-remove" type="button" title="Снять с должности" @onclick="() => RemoveFromPosition(employee.Id)" @onclick:stopPropagation="true">×</button>
                            </div>
                        }
                        @if (!analysts.Any())
                        {
                            <div style="color: #999; padding: 10px; text-align: center;">Пусто</div>
                        }
                    </td>
                    <td class="drop-zone"
                        data-position="Designer"
                        @ondrop="(e) => OnDrop(e, Position.Designer)"
                        @ondragover="OnDragOver"
                        @ondragover:preventDefault="true"
                        @ondragleave="OnDragLeave">
                        @foreach (var employee in designers)
                        {
                            <div class="employee-item" 
                                 draggable="true"
                                 data-employee-id="@employee.Id"
                                 @ondragstart="(e) => OnDragStart(e, employee.Id)"
                                 @ondblclick="() => MoveEmployeeToAvailable(employee)">
                                <span>@employee.Name</span>
                                <button class="btn-remove" type="button" title="Снять с должности" @onclick="() => RemoveFromPosition(employee.Id)" @onclick:stopPropagation="true">×</button>
                            </div>
                        }
                        @if (!designers.Any())
                        {
                            <div style="color: #999; padding: 10px; text-align: center;">Пусто</div>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div style="padding: 10px; background-color: #f0f0f0; margin-top: 20px; font-size: 12px;">
    <strong>Отладка:</strong><br/>
    Всего сотрудников: @allEmployees.Count<br/>
    Без назначения: @allEmployees.Count(e => e.CurrentPosition == Position.None)<br/>
    Программистов: @programmers.Count<br/>
    Аналитиков: @analysts.Count<br/>
    Дизайнеров: @designers.Count<br/>
    DraggedEmployeeId: @draggedEmployeeId<br/>
    ShowMenu: @showMenu
</div>

@if (showMenu)
{
    <div class="menu-overlay" @onclick="CloseMenu">
        <div class="menu-box" @onclick:stopPropagation="true">
            <h4>Выберите отдел для @selectedEmployee?.Name</h4>
            <button class="menu-btn" @onclick="() => SelectPosition(Position.Programmer)">Программист</button>
            <button class="menu-btn" @onclick="() => SelectPosition(Position.Analyst)">Аналитик</button>
            <button class="menu-btn" @onclick="() => SelectPosition(Position.Designer)">Дизайнер</button>
            <button class="menu-btn-cancel" @onclick="CloseMenu">Отмена</button>
        </div>
    </div>
}

