@code {
    private List<Employee> allEmployees = new();
    private List<Employee> programmers = new();
    private List<Employee> analysts = new();
    private List<Employee> designers = new();
    private bool showMenu = false;
    private Employee? selectedEmployee = null;
    private int draggedEmployeeId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployees();
    }

    private async Task LoadEmployees()
    {
        Console.WriteLine("[DEBUG] LoadEmployees: Starting");
        try
        {
            allEmployees = await EmployeeService.GetAllEmployeesAsync();
            Console.WriteLine($"[DEBUG] LoadEmployees: Total employees={allEmployees.Count}");
            programmers = await EmployeeService.GetEmployeesByPositionAsync(Position.Programmer);
            analysts = await EmployeeService.GetEmployeesByPositionAsync(Position.Analyst);
            designers = await EmployeeService.GetEmployeesByPositionAsync(Position.Designer);
            Console.WriteLine($"[DEBUG] LoadEmployees: Programmers={programmers.Count}, Analysts={analysts.Count}, Designers={designers.Count}");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[DEBUG] LoadEmployees ERROR: {ex.Message}");
        }
    }

    private void OnDragStart(DragEventArgs e, int employeeId)
    {
        Console.WriteLine($"[DEBUG] OnDragStart: employeeId={employeeId}");
        draggedEmployeeId = employeeId;
        e.DataTransfer.EffectAllowed = "move";
        // Employee ID is stored in JavaScript window.draggedEmployeeId
    }

    private async Task OnDrop(DragEventArgs e, Position position)
    {
        Console.WriteLine($"[DEBUG] OnDrop: draggedEmployeeId={draggedEmployeeId}, position={position}");
        
        if (draggedEmployeeId > 0)
        {
            var employee = allEmployees.FirstOrDefault(emp => emp.Id == draggedEmployeeId);
            Console.WriteLine($"[DEBUG] OnDrop: employee found={employee != null}, name={employee?.Name}");
            if (employee != null)
            {
                employee.CurrentPosition = position;
                await EmployeeService.UpdateEmployeeAsync(employee);
                Console.WriteLine($"[DEBUG] OnDrop: Employee updated successfully, new position={position}");
                await LoadEmployees();
            }
        }
        else
        {
            Console.WriteLine($"[DEBUG] OnDrop: draggedEmployeeId is 0 or invalid");
        }
        
        draggedEmployeeId = 0;
    }

    private void OnDragOver(DragEventArgs e)
    {
        Console.WriteLine("[DEBUG] OnDragOver called");
        // PreventDefault is handled by JavaScript
    }

    private void OnDragLeave(DragEventArgs e)
    {
        // Remove hover effect handled by CSS
    }

    private async Task MoveEmployeeToAvailable(Employee employee)
    {
        Console.WriteLine($"[DEBUG] MoveEmployeeToAvailable: employee={employee.Name}");
        employee.CurrentPosition = Position.None;
        await EmployeeService.UpdateEmployeeAsync(employee);
        await LoadEmployees();
    }

    private async Task MoveEmployeeToPosition(Employee employee, Position position)
    {
        Console.WriteLine($"[DEBUG] MoveEmployeeToPosition: employee={employee.Name}, position={position}");
        try
        {
            employee.CurrentPosition = position;
            await EmployeeService.UpdateEmployeeAsync(employee);
            Console.WriteLine($"[DEBUG] MoveEmployeeToPosition: Success");
            await LoadEmployees();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[DEBUG] MoveEmployeeToPosition ERROR: {ex.Message}");
        }
    }

    private async Task RemoveFromPosition(int employeeId)
    {
        Console.WriteLine($"[DEBUG] RemoveFromPosition: employeeId={employeeId}");
        var employee = allEmployees.FirstOrDefault(e => e.Id == employeeId);
        Console.WriteLine($"[DEBUG] RemoveFromPosition: employee found={employee != null}");
        if (employee != null)
        {
            employee.CurrentPosition = Position.None;
            await EmployeeService.UpdateEmployeeAsync(employee);
            Console.WriteLine($"[DEBUG] RemoveFromPosition: Success");
            await LoadEmployees();
        }
    }

    private void ShowPositionMenu(Employee employee)
    {
        Console.WriteLine($"[DEBUG] ShowPositionMenu: employee={employee.Name}");
        selectedEmployee = employee;
        showMenu = true;
        StateHasChanged();
    }

    private async Task SelectPosition(Position position)
    {
        if (selectedEmployee != null)
        {
            await MoveEmployeeToPosition(selectedEmployee, position);
        }
        CloseMenu();
    }

    private void CloseMenu()
    {
        showMenu = false;
        selectedEmployee = null;
        StateHasChanged();
    }
}
